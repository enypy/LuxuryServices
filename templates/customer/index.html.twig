{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CompanyName</th>
                <th>ActivityType</th>
                <th>ContactName</th>
                <th>Position</th>
                <th>ContactPhoneNumber</th>
                <th>ContactEmail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.companyName }}</td>
                <td>{{ customer.activityType }}</td>
                <td>{{ customer.contactName }}</td>
                <td>{{ customer.position }}</td>
                <td>{{ customer.contactPhoneNumber }}</td>
                <td>{{ customer.contactEmail }}</td>
                <td>
                    <a href="{{ path('app_customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_new') }}">Create new</a>
{% endblock %}
